<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titulo"
        android:textColor="@color/negro_princp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contador de productos"
        android:layout_gravity="center"
        android:textSize="@dimen/dimen_titulo"
        />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/LinearLayout_Producto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/tono1"
            android:layout_margin="@dimen/dimen_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 1"
                android:textSize="@dimen/dimen_normal"
                android:textColor="@color/blanco"/>

            <TextView
                android:id="@+id/contador_producto1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_normal"
                android:textColor="@color/blanco"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_Producto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_margin"
            android:background="@color/tono2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 2"
                android:textSize="@dimen/dimen_normal"
                android:textColor="@color/blanco"/>

            <TextView
                android:id="@+id/contador_producto2"
                android:layout_width="wrap_content"
                android:textSize="@dimen/dimen_normal"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/blanco"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_Producto3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_margin"
            android:background="@color/tono3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 3"
                android:textSize="@dimen/dimen_normal"
                android:textColor="@color/blanco"/>

            <TextView
                android:id="@+id/contador_producto3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_normal"
                android:text="0"
                android:textColor="@color/blanco"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/LinearLayout_Producto4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_margin"
            android:background="@color/tono3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 4"
                android:textSize="@dimen/dimen_normal"
                android:textColor="@color/blanco"/>

            <TextView
                android:id="@+id/contador_producto4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_normal"
                android:text="0"
                android:textColor="@color/blanco"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_Producto5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_margin"
            android:background="@color/tono1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 5"
                android:textSize="@dimen/dimen_normal"
                android:textColor="@color/blanco"/>

            <TextView
                android:id="@+id/contador_producto5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_normal"
                android:text="0"
                android:textColor="@color/blanco"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_Producto6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_margin"
            android:background="@color/tono2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 6"
                android:textSize="@dimen/dimen_normal"
                android:textColor="@color/blanco"/>

            <TextView
                android:id="@+id/contador_producto6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_normal"
                android:text="0"
                android:textColor="@color/blanco"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/LinearLayout_Producto7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_margin"
            android:background="@color/tono2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_normal"
                android:text="Producto 7"
                android:textColor="@color/blanco"/>

            <TextView
                android:id="@+id/contador_producto7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_normal"
                android:text="0"
                android:textColor="@color/blanco"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_Producto8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_margin"
            android:background="@color/tono3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 8"
                android:textSize="@dimen/dimen_normal"
                android:textColor="@color/blanco"/>

            <TextView
                android:id="@+id/contador_producto8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/dimen_normal"
                android:textColor="@color/blanco"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_Producto9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_margin"
            android:background="@color/tono1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_normal"
                android:text="Producto 9"
                android:textColor="@color/blanco"/>

            <TextView
                android:id="@+id/contador_producto9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_normal"
                android:text="0"
                android:textColor="@color/blanco"/>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/text_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:paddingTop="15dp"
        android:layout_gravity="left"
        android:textColor="@color/negro_princp"
        android:textSize="@dimen/dimen_normal"/>

    <EditText
        android:id="@+id/edit_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe el usuario aqui"
        android:textSize="@dimen/dimen_normal"/>

    <TextView
        android:id="@+id/text_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:textSize="@dimen/dimen_normal"
        android:textColor="@color/negro_princp"
        android:layout_gravity="left"
        android:text="Correo ElectrÃ³nico"/>

    <EditText
        android:id="@+id/edit_correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_normal"
        android:hint="Escribe el correo aqui"/>

    <Button
        android:id="@+id/boton_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_margin"
        android:textSize="@dimen/dimen_normal"
        android:text="Enviar"
        android:layout_gravity="center"/>

</LinearLayout>