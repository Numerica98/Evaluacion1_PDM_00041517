<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".NewActivity">

    <TextView
        android:id="@+id/titulo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Factura"
        android:layout_gravity="center"
        android:textSize="@dimen/dimen_titulo"
        android:textColor="@color/negro_princp"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/negro_princp"
            android:text="Usuario: "
            android:textSize="@dimen/dimen_normal"/>

        <TextView
            android:id="@+id/usuario_ingresado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/negro_princp"
            android:text=""
            android:textSize="@dimen/dimen_normal"
            android:layout_toEndOf="@id/usuario"
            android:layout_toRightOf="@id/usuario" />

        <TextView
            android:id="@+id/correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/negro_princp"
            android:text="Correo: "
            android:textSize="@dimen/dimen_normal"
            android:layout_below="@id/usuario"/>

        <TextView
            android:id="@+id/correo_ingresado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/negro_princp"
            android:textSize="@dimen/dimen_normal"
            android:layout_toEndOf="@id/correo"
            android:layout_toRightOf="@id/correo"
            android:layout_alignBaseline="@id/correo"/>

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total de productos: "
            android:textColor="@color/negro_princp"
            android:textSize="@dimen/dimen_normal"
            android:layout_below="@id/correo"/>

        <TextView
            android:id="@+id/total_productos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/negro_princp"
            android:textSize="@dimen/dimen_normal"
            android:layout_toEndOf="@id/total"
            android:layout_toRightOf="@id/total"
            android:layout_alignBaseline="@id/total"/>
    </RelativeLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalle de productos"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/negro_princp"
        android:textSize="30dp"/>

    <LinearLayout
        android:id="@+id/LinearLayoutv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/LinearLayoutv2_Producto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/tono1"
            android:layout_margin="@dimen/dimen_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 1"
                android:textColor="@color/blanco"
                android:textSize="@dimen/dimen_normal" />

            <TextView
                android:id="@+id/total_producto1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blanco"
                android:textSize="@dimen/dimen_normal"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutv2_Producto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_margin"
            android:background="@color/tono2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_normal"
                android:textColor="@color/blanco"
                android:text="Producto 2" />

            <TextView
                android:id="@+id/total_producto2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_normal"
                android:textColor="@color/blanco"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutv2_Producto3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_margin"
            android:background="@color/tono3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 3"
                android:textColor="@color/blanco"
                android:textSize="@dimen/dimen_normal"/>

            <TextView
                android:id="@+id/total_producto3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_normal"
                android:textColor="@color/blanco"
                android:text=""/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/LinearLayoutv2_Producto4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/tono3"
            android:layout_margin="@dimen/dimen_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 4"
                android:textColor="@color/blanco"
                android:textSize="@dimen/dimen_normal"/>

            <TextView
                android:id="@+id/total_producto4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blanco"
                android:textSize="@dimen/dimen_normal"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutv2_Producto5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_margin"
            android:background="@color/tono1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 5"
                android:textSize="@dimen/dimen_normal"
                android:textColor="@color/blanco"/>

            <TextView
                android:id="@+id/total_producto5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blanco"
                android:textSize="@dimen/dimen_normal"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutv2_Producto6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_margin"
            android:background="@color/tono2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_normal"
                android:textColor="@color/blanco"
                android:text="Producto 6" />

            <TextView
                android:id="@+id/total_producto6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blanco"
                android:textSize="@dimen/dimen_normal"
                android:text=""/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/LinearLayoutv2_Producto7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/tono2"
            android:layout_margin="@dimen/dimen_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_normal"
                android:textColor="@color/blanco"
                android:text="Producto 7" />

            <TextView
                android:id="@+id/total_producto7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blanco"
                android:textSize="@dimen/dimen_normal"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutv2_Producto8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_margin"
            android:background="@color/tono3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_normal"
                android:textColor="@color/blanco"
                android:text="Producto 8" />

            <TextView
                android:id="@+id/total_producto8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blanco"
                android:textSize="@dimen/dimen_normal"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutv2_Producto9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_margin"
            android:background="@color/tono1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_normal"
                android:textColor="@color/blanco"
                android:text="Producto 9" />

            <TextView
                android:id="@+id/total_producto9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blanco"
                android:textSize="@dimen/dimen_normal"
                android:text=""/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/boton_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_margin"
        android:textSize="@dimen/dimen_normal"
        android:text="Share"
        android:layout_gravity="center"/>

</LinearLayout>